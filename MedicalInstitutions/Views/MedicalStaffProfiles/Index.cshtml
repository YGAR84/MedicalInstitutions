@model PagedList.IPagedList<MedicalInstitutions.Models.Staffs.MedicalStaffs.MedicalStaffProfile>
@using PagedList.Mvc
@{
    ViewBag.Title = "Medical staff profile";
}

<h2>Medical staff profiles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().ProfileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DiseaseGroup.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().IsSurgeon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SalaryAddition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().VacationAddition)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiseaseGroup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSurgeon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryAddition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationAddition)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, PageNum =>Url.Action("Index",
    new { PageNum }))
